{{#each questions}}
  <div class="card card-body mb-2 shadow">
    <small>Question:</small>
    <h4>{{{title}}}</h4>
    <small>Answer:</small>
    <p>{{answer}}</p>
    <a href="/questions/edit/{{_id}}" class="btn btn-warning mb-2">Edit</a>
    <form action="/questions/{{_id}}?_method=DELETE" method="post">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-danger btn-block" style="width: 100%" value="Delete">
    </form>
  </div>
{{else}}
  <p>No Questions listed</p>
{{/each}}