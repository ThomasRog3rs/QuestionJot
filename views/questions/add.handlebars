{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card card-body">
  <h3>Add a question</h3>
  <form action="/questions" method="post">
    <fieldset>
      <div class="form-group">
        <label for="questionTitle" class="form-label mt-4">Question</label>
        <input type="text" class="form-control" id="questionTitle" name="title">
      </div>
    
      <div class="form-group mb-4">
        <label for="exampleTextarea" class="form-label mt-4">Answer</label>
        <textarea class="form-control" id="exampleTextarea" rows="3" name="details"></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
  </form>
</div>


